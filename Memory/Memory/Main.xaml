<Window x:Class="Memory.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory"
        mc:Ignorable="d"
        Title="Memory Game Start" Height="450" Width="800" WindowState="Maximized">
    <Grid x:Name="MainGrid">
        <!--<Grid.Background>
            <ImageBrush ImageSource="C:\Users\tim\source\repos\Memory2\Memory\Memory\Resources\TarotCards.png" Stretch="UniformToFill"/>
        </Grid.Background>-->
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button Content="game" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,0,00,0">
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Save" Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="savebutton.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Load" Click="MenuItem_Click">
                            <MenuItem.Icon>
                                <Image Source="loadbutton.png"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="reset" Click="MenuItem_Click_2">
                            <MenuItem.Icon>
                                <Image Source="resetbutton.png"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="help" Click="MenuItem_Click_1"/>
                        <Separator />
                        <MenuItem Header="Terug naar hoofdmenu" Click="MenuItem_Click"/>
                        <MenuItem Header="Afsluiten" Click="MenuItem_Click_3"/>
                    </ContextMenu>
                </Button.ContextMenu>
                <Image Source="optionbutton.png"></Image>
            </Button>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window> 
