<Window x:Class="Memory.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory"
        mc:Ignorable="d"
        Title="Memory Game Start" Height="450" Width="800" WindowState="Maximized">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="Resources/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <Button MinWidth="100" Margin="00,0,0,0" Click="Button_Clicknew">new</Button>
            <Button MinWidth="100" Margin="10,0,0,0" Click="Button_Clickload">load</Button>
            <Button MinWidth="100" Margin="10,0,0,0" Click="Button_Clickhelp">help</Button>
            <Button MinWidth="100" Margin="10,0,0,0" Click="Button_Clickscore">Highscore</Button>
            <Button MinWidth="100" Margin="10,0,0,0" Click="Button_Clickquit">Quit</Button>
        </StackPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window> 
